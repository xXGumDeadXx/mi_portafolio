---
<section class="my-5">
    <h3 class="font-bold text-xl text-center my-5">Tecnolog√≠as que uso</h3>
    <ul class="grid grid-cols-2 md:grid-cols-4 gap-y-8 gap-x-8 items-center [&>li>img]:size-12 [&>li>img]:mx-auto [&>li]:size-20 [&>li]:text-center w-8/12 mx-auto" id="container">
        {
            data.map((item)=>{
                return <li class="mx-auto opacity-0">
                    <img src={item.icon} alt={item.name} title={item.name} loading="lazy">
                    <h3>{item.name}</h3>
                    </li>
            })
        }
        <a href="/more_tecnology" class="mx-auto btn text-center">Ver mas detalles</a>
    </ul>
</section>

<script>
    const target = document.querySelectorAll("#container>li")
    const option = {
        root: null,
        threshold: 1
    }

    const observer = new IntersectionObserver(entry =>{
        entry.forEach((entrys)=>{
            if(entrys.isIntersecting){
                entrys.target.classList.add("animate-fade_In")
            }
        })
    }, option)

    target.forEach((item)=>{
        observer.observe(item)
    })
</script>